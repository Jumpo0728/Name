{
  "name": "minecraft-java-to-bedrock-animation-converter",
  "version": "1.0.0",
  "description": "Convert Minecraft Java animation resource packs to Bedrock-compatible format",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "echo 'Server build complete'",
    "deploy": "npm run build && vercel --prod"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "adm-zip": "^0.5.10",
    "jszip": "^3.10.1",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0",
    "tmp": "^0.2.1",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "minecraft",
    "animation",
    "converter",
    "resource-pack",
    "java",
    "bedrock"
  ],
  "author": "Animation Converter Tool",
  "license": "MIT"
}